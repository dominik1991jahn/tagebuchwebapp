<?xml version="1.0" encoding="UTF-8"?>
<Stundenplan>
	<!--
		<Woche/> entspricht einer KALENDERwoche, also NICHT sieben Tage am Stück,
		sondern z.B. Montag - Freitag, Montag - Samstag, Mittwoch - Freitag,
		aber !NICHT! Donnerstag - Dienstag (der naechsten Woche)
	-->
	<Woche von="2014-01-01" bis="2014-01-07"> <!-- date("W",strtotime("2014-01-01")) == Woche des Jahres (z.B. 1),  -->
		<Tag datum="2014-01-01">
			<!-- Stunde 1 - 2 -->
			<Fach>
				<Bezeichnung>TFC#</Bezeichnung>
				<!-- tagebuch.ufach ODER tagebuch.idufach -> join -> ufach.ufach -->
				
				<Lehrkraefte>
					<Lehrkraft>RIP</Lehrkraft> <!-- tagebuch.idlehrer1 -> join -> lehrer.Kname -->
					<Lehrkraft>BAR</Lehrkraft> <!-- tagebuch.idlehrer2 -> join -> lehrer.Kname -->
				</Lehrkraefte>
				
				<Start>0</Start> <!-- tagebuch.anfStunde -->
				<Dauer>2</Dauer> <!-- tagebuch.endStunde - tagebuch.anfStunde + 1 -->
				
				<Beschreibung>Beschreibung der Stunde</Beschreibung> <!-- tagebuch.hinweis -->
				
				<Raeume>
					<Raum>208</Raum> <!-- tagebuch.raum1 -->
					<Raum>209</Raum> <!-- tagebuch.raum2 -->
				</Raeume>
			</Fach>
			
			<!-- Freistunde von 3 - 4 -->
			<Fach>
				<Bezeichnung>IKWWW</Bezeichnung>
				
				<Lehrkraefte>
					<Lehrkraft status="entfaellt">BET</Lehrkraft> <!-- IF tagebuch.idVlehrer1 <> 0 (Vertretung) ODER tagebuch.idVlehrer = -1 (entfaellt) -->
					<Lehrkraft status="entfaellt">KOE</Lehrkraft>
				</Lehrkraefte>
			</Fach>
			
			<!-- Stunde 5 - 6 (Vertretungsstunden) -->
			<Fach>
				<Bezeichnung>JAVA</Bezeichnung>
				
				<Lehrkraefte>
					<Lehrkraft status="entfaellt">RIP</Lehrkraft> <!-- IF tagebuch.idVlehrer <> 0 (Vertretung) -->
					<Lehrkraft>BAR</Lehrkraft>
					<Lehrkraft status="ersatz">KOE</Lehrkraft> <!-- tagebuch.idVLehrer <> 0 (ID des Ersatzlehrers) -->
				</Lehrkraefte>
				
				<Start>5</Start>
				<Dauer>2</Dauer>
				
				<Beschreibung>Beschreibung der Stunde</Beschreibung>
				
				<Raeume>
					<Raum>208</Raum>
					<Raum>204</Raum>
				</Raeume>
			</Fach>
			
			<!-- Stunde 7 -->
			<Fach>
				<Bezeichnung>WMS</Bezeichnung>
				
				<Lehrkraefte>
					<Lehrkraft>DOTL</Lehrkraft>
				</Lehrkraefte>
				
				<!-- <Start> entfaellt, wird hier berechnet -->
				<!-- <Dauer> entfaellt, da nur eine Stunde (wegen Datenverkehr bei Android) -->
				
				<Beschreibung>Beschreibung der Stunde</Beschreibung>
				
				<Raeume>
					<Raum>204</Raum>
				</Raeume>
			</Fach>
		</Tag>
		
		<Tag datum="2014-01-02">
			<!-- Freistunde 1 - 2 (Fach muss nicht gegeben sein, ist regulär frei -->
			
			<Fach>
				<Bezeichnung>TFBAN</Bezeichnung>
				
				<Lehrkraefte>
					<Lehrkraft>FOE</Lehrkraft>
					<Lehrkraft>DOTG</Lehrkraft>
				</Lehrkraefte>
				
				<Start>3</Start>
				<Dauer>3</Dauer>
				
				<!-- <Beschreibung> entfaellt, da nichts eingetragen -->
				
				<Raeume>
					<Raum>208</Raum>
				</Raeume>
				
			</Fach>
		</Tag>
		
		<Tag datum="2014-01-03" typ="feiertag" /> <!-- ferien.Start && ferien.Ende = selbes Datum -->
	</Woche>
	
	<Woche von="2014-01-08" bis="2014-01-15" typ="ferien" /> <!-- ferien.Start <= von && ferien.Ende >= bis -->
	<Woche von="2014-01-17" bis="2014-01-22" typ="ferien" />
	
	
</Stundenplan>
